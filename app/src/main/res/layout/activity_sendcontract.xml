<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_marginBottom="@dimen/dimen_60"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/qinayue_rl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/xiangmu_rl"
                    android:layout_below="@+id/xuqiumiaoshu_ll"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/project_name"
                        android:text="项目"
                        android:textSize="@dimen/size_18"
                        android:textColor="@color/header_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/project_contract"
                        android:text="查看合同"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/size_13"
                        android:textColor="@color/base_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/project_name_tv"
                        android:layout_marginTop="@dimen/dimen_25"
                        android:text="项目名"
                        android:layout_below="@+id/project_name"
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/color_66_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/project_name_tv_describe"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dimen_25"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/size_14"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:text="儿童游戏背景音乐商业使用权购买的服务..."
                        android:layout_toRightOf="@+id/project_name_tv"
                        android:layout_toLeftOf="@+id/project_image1"
                        android:layout_alignBottom="@+id/project_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/project_typework"
                        android:layout_marginTop="@dimen/dimen_25"
                        android:text="工种"
                        android:layout_below="@+id/project_name_tv"
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/color_66_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/project_type"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/size_14"
                        android:layout_alignLeft="@+id/project_name_tv_describe"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_toRightOf="@+id/project_typework"
                        android:text="CV"
                        android:layout_alignBottom="@+id/project_typework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:id="@+id/project_cooperation_period"
                        android:layout_marginTop="@dimen/dimen_25"
                        android:text="合作周期"
                        android:layout_below="@+id/project_typework"
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/color_66_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/cycle"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/size_14"
                        android:layout_alignLeft="@+id/project_name_tv_describe"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_toRightOf="@+id/project_cooperation_period"
                        android:layout_alignBottom="@+id/project_cooperation_period"
                        android:text="45天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/project_image1"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:layout_alignBottom="@+id/project_cooperation_period"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_list_more_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/modify_cycle"
                        android:text="修改"
                        android:padding="@dimen/dimen_5"
                        android:textColor="@color/base_blue"
                        android:textSize="@dimen/size_14"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_toLeftOf="@+id/project_image1"
                        android:layout_alignBottom="@+id/project_cooperation_period"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/project_cooperation_remuneration"
                        android:layout_marginTop="@dimen/dimen_25"
                        android:text="合作稿酬"
                        android:layout_below="@+id/project_cooperation_period"
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/color_66_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/price"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/size_14"
                        android:layout_alignLeft="@+id/project_name_tv_describe"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_toRightOf="@+id/project_cooperation_remuneration"
                        android:layout_alignBottom="@+id/project_cooperation_remuneration"
                        android:text="￥300.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/project_image2"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:layout_alignBottom="@+id/project_cooperation_remuneration"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_list_more_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/modify_price"
                        android:text="修改"
                        android:padding="@dimen/dimen_5"
                        android:textColor="@color/base_blue"
                        android:textSize="@dimen/size_14"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:layout_toLeftOf="@+id/project_image2"
                        android:layout_alignBottom="@+id/project_cooperation_remuneration"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/biaozhu"
                        android:layout_marginTop="@dimen/dimen_25"
                        android:textSize="@dimen/size_13"
                        android:textColor="@color/header_prompt_color2"
                        android:layout_below="@+id/project_cooperation_remuneration"
                        android:text="注：填写和音乐人沟通好的周期以及稿酬，会提高通过率哦"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/zhaomuren"
                    android:layout_below="@+id/xiangmu_rl"
                    android:text="音乐人"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/size_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/lianxiren"
                    android:layout_below="@+id/zhaomuren"
                    android:layout_marginBottom="@dimen/dimen_100"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/project_head_image"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="@dimen/dimen_48"
                        android:layout_height="@dimen/dimen_48" />

                    <TextView
                        android:visibility="gone"
                        android:text="联系TA"
                        android:padding="@dimen/dimen_8"
                        android:background="@drawable/bg_registrationstas_bg"
                        android:textColor="@color/base_blue"
                        android:textSize="@dimen/size_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/music_name"
                        android:text="一白二穷工作室"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/project_head_image"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/size_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>




            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_20">

                <CheckBox
                    android:id="@+id/cb_composition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:clickable="false"
                    android:drawableLeft="@drawable/selector_contract_check"
                    android:focusable="true"
                    android:focusableInTouchMode="false" />

                <TextView
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看"
                    android:textSize="@dimen/size_13"
                    android:textColor="@color/header_prompt_color2" />

                <TextView
                    android:id="@+id/contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《合同》"
                    android:textColor="@color/base_blue"
                    android:textSize="@dimen/size_13" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="并同意签约"
                    android:textSize="@dimen/size_13"
                    android:textColor="@color/header_prompt_color2" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


    <RelativeLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60">
        <LinearLayout
            android:background="@color/toolbar_botom_devicer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1">
        </LinearLayout>


        <TextView
            android:id="@+id/send_contract_btn"
            android:text="发送合同"
            android:alpha="0.5"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:textSize="@dimen/size_16"
            android:textColor="@color/white_text"
            android:background="@drawable/bg_releaseproject"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40" />



    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_price_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/baomi"
                android:textSize="@dimen/size_14"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="我的报价"/>

            <EditText
                android:id="@+id/et_price"
                android:layout_toRightOf="@+id/baomi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="@null"
                android:hint=""/>
            <TextView
                android:id="@+id/day"
                android:layout_toRightOf="@+id/et_price"
                android:textSize="@dimen/size_14"
                android:textColor="@color/header_prompt_color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="元"/>
            <include
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_below="@+id/et_price"
                layout="@layout/include_keyboardview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>