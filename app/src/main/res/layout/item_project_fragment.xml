<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="@color/ed_code_color"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:text="贴唱后期混音200一首"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_16" />

        <TextView
            android:id="@+id/progect_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="8k-10k"
            android:textColor="@color/base_blue"
            android:textSize="@dimen/size_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">

        <TextView
            android:id="@+id/project_arrangements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:text="编曲"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/project_composition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_toRightOf="@+id/project_arrangements"
            android:text="作曲"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/project_musicians"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_toRightOf="@+id/project_composition"
            android:text="音乐人"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/progect_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="12:14"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">

        <TextView
            android:id="@+id/project_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:text="广播剧"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/project_huai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_toRightOf="@+id/project_radio"
            android:text="国风"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_13" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">

        <ImageView
            android:id="@+id/project_image"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_15"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="@dimen/dimen_20"/>

        <TextView
            android:id="@+id/project_musicans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@+id/project_image"
            android:text="音乐人名字"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_13" />

    </RelativeLayout>

    <View
        style="@style/view_line_h"
        android:layout_marginLeft="@dimen/dimen_90"
        android:visibility="gone" />

</LinearLayout>