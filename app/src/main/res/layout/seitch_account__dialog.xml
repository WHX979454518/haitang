<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


    <RelativeLayout
        android:id="@+id/musicians_rl"
        android:background="@drawable/bg_type_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/musicians"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_15"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_15"
            android:text="切换至音乐人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recruit_people_rl"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recruit_people"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_15"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_15"
            android:text="切换至招募人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/toolbar_botom_devicer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1" />

    <RelativeLayout
        android:id="@+id/cancel_rl"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60">
        <TextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_cancel"
            android:text="取消"
            android:textColor="@color/header_prompt_color2"
            android:textSize="@dimen/size_16"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>