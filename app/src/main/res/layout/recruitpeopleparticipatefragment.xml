<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.mxkj.htmusic.toolmodule.utils.SuperSwipeRefreshLayout
        android:visibility="gone"
        android:id="@+id/superSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.mxkj.htmusic.toolmodule.utils.SuperSwipeRefreshLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingTop="@dimen/size_10"
        android:scrollbars="none" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14"
        android:textColor="@color/color_66_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_80"
        android:drawablePadding="@dimen/dimen_15"
        android:drawableTop="@mipmap/img_none"
        android:gravity="center_horizontal"
        android:text="你还没有项目在进行中" />

</RelativeLayout>