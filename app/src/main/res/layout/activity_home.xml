<?xml version="1.0" encoding="utf-8"?>
<com.mxkj.htmusic.toolmodule.width.VDHLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/status_bar"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"></LinearLayout>

    <FrameLayout
        android:layout_below="@+id/status_bar"
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_60"/>

    <LinearLayout
        android:id="@+id/commonTabLayout"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dimen_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:background="@color/toolbar_botom_devicer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1">
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/line_home_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_home_home_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_home_home"
                    />

                <TextView
                    android:id="@+id/line_home_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:textSize="@dimen/size_11"
                    android:textColor="@color/header_prompt_color2"
                    android:text="首页" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_home_topic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_home_topic_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_home_topic" />
                <TextView
                    android:id="@+id/line_home_topic_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:textSize="@dimen/size_11"
                    android:textColor="@color/header_prompt_color2"
                    android:text="音乐人" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_home_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_home_message_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_home_message" />
                <TextView
                    android:id="@+id/line_home_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:textSize="@dimen/size_11"
                    android:textColor="@color/header_prompt_color2"
                    android:text="消息" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_home_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_home_mine_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_home_mine" />
                <TextView
                    android:id="@+id/line_home_mine_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:textSize="@dimen/size_11"
                    android:textColor="@color/header_prompt_color2"
                    android:text="我的" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</com.mxkj.htmusic.toolmodule.width.VDHLinearLayout>